<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>

<p>
  <strong>Author:</strong>
  <%= @user.email %>
</p>
<% if user_signed_in? %>
  <% if @article.user_id == current_user.id %>
    <%= link_to 'Edit', edit_article_path(@article) %> 
    <%= link_to 'Destroy', articles_path, method: :delete, data: { confirm: "Are you sure you want to delete the article #{article.title}?" } %>
    <%= link_to 'Back', articles_path %>
  <% end %> 
<% end %>
<h3>Comments</h3>
<% if user_signed_in? %>
  <%= render @article.comments %>
  <%= render 'comments/form' %>
<% end %>